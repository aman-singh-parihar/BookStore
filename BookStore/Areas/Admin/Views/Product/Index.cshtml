@{
}
@model List<ListProductVM>
<div class="card mb-3 box-shadow">
    <div class="card-header bg-dark text-center">
        <div class="row pb-2">
            <h2>Product List</h2>
        </div>
    </div>
    <div class="card-body">
        <div class="card-title text-end">
            <a asp-area="Admin" asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> CREATE NEW PRODUCT
            </a>
        </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">ISBN</th>
                    <th scope="col">Description</th>
                    <th scope="col">Category</th>
                    <th scope="col">Author</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr class="table-secondary">
                        <td>@product.Product.Title</td>
                        <td>@product.Product.ISBN</td>
                        <td>@product.Product.Description</td>
                        <td>@product.Category.Text</td>
                        <td>@product.Product.Author</td>
                        <td>
                            <a asp-area="Admin" asp-controller="Product" asp-action="Edit" class="btn btn-primary" asp-route-id="@product.Product.Id">
                                <i class="bi bi-pencil-square"></i> EDIT
                            </a>
                            <a asp-area="Admin" asp-controller="Product" asp-action="Delete" class="btn btn-danger" asp-route-id="@product.Product.Id">
                                <i class="bi bi-trash"></i> DELETE
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
