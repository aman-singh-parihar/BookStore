@model Category

<form method="post">
    <div class="row pb-2">
        <h2>Create Category</h2>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="form-label mt-4"></label>
        <input asp-for="Name" class="form-control" placeholder="Enter category">
    </div>
    <div class="form-group">
        <label asp-for="DisplayOrder" class="form-label mt-4"></label>
        <input asp-for="DisplayOrder" class="form-control" placeholder="4">
    </div>
    <div class="row pt-2">
        <div class="col-md-6 col-lg-6">
            <button type="submit" class="btn btn-success">Submit</button>
        </div>
        <div class="col-md-6 col-lg-6 text-end">
            <a asp-controller="Category" asp-action="Index" class="btn btn-primary">
                Back to list
            </a>
        </div>
    </div>
</form>