@model List<Category>
<div class="container">
    <div class="row pt-4 pb-2">
        <div class="col-md-6 col-lg-6">
            <h2>Category List</h2>
        </div>
        <div class="col-md-6 col-lg-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> Create New Category
            </a>
        </div>
    </div>
</div>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Category Name</th>
            <th scope="col">Display Order</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr class="table-secondary">
                <td>@category.Name</td>
                <td>@category.DisplayOrder</td>
                <td>
                    <a asp-controller="Category" asp-action="Edit" class="btn btn-primary" asp-route-id="@category.Id">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-controller="Category" asp-action="Delete" class="btn btn-danger" asp-route-id="@category.Id">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

